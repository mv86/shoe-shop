<h1>Place your shoe order here :)</h1>

<form action = "/shoe_order" method="post">

<label for="full_name">Full Name:</label>
<input type="text" name="full_name" id="full_name">

<label for="address">Address:</label>
<input type="text" name="address" id="address">

<label for="size">Select a shoe size:</label>
<input type="number" name="size" min=7 max=11 id="size">

<label for="quantity">Quantity:</label>
<input type="number" name="quantity" min=0 id="quantity">

<input type="submit" value="Finalize Order">

</form>